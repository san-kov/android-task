<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/ScrollView01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="#FFFFFF"
        android:indeterminateTint="#2196F3"
        android:layout_marginTop="-7dp"/>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="99dp"
            android:layout_height="104dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/avatarUrl"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="8pt"
            android:layout_marginRight="5pt"
            android:background="#1abc9c"
            android:gravity="center"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#fff"
            android:textSize="15pt"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="Platform: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>

        <TextView
            android:id="@+id/platform"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="center_horizontal"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="Kills: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="KillsPerMatch: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/killsPerMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <ProgressBar
            android:id="@+id/kdStat"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="209dp"
            android:layout_height="26dp"
            android:layout_marginTop="9dp"
            android:max="1000" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="WinningKills: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/winningKills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="Damage: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="MatchesPlayed: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/matchesPlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="Revives: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/revives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="SniperKills: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/sniperKills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text="RankScore: "
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
        <TextView
            android:id="@+id/rankScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt"
            android:gravity="left"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#030303"
            android:textSize="12pt"></TextView>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4pt"
        android:layout_height="1dp" />

</LinearLayout>
</ScrollView>